{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "deploy",
    "tasks",
    "test",
    "typechain-ethers",
    "hardhat.config.ts",
    "layerzero.config.ts"
, "scripts/deploy/wiring.ts", "scripts/deploy/FAssetRedeemComposer.ts"  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
